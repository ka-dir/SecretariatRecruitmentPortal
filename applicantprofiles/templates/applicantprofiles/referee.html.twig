{% extends 'main-layout.html' %}
{% block content %}
    <br>
    <div class="d-inline-flex gap-2 mb-5">
        <a href="{% url 'applicantprofiles:referee-create' %}"
           class="d-inline-flex align-items-center btn btn-primary btn-lg px-4 rounded-pill" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg> &nbsp; Add New Referee
            <svg class="bi ms-2" width="24" height="24">
                <use xlink:href="#arrow-right-short"/>
            </svg>
        </a>


    </div>
    {% if referee_datas %}
        <div class="card text-center">
            <div class="card-header">
                Add Reference
            </div>
            <div class="card-body">

                <table class="table table-bordered table-success  table-striped table-hover">

                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Supervisor</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country</th>
                        <th scope="col">City</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Language</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    {% for referee_data in referee_datas %}
                    <tbody class="table-group-divider">
                    <tr>
                        <th scope="row">{{ referee_data.id }}</th>
                        <td>{{ referee_data.name }}</td>
                        <td>{{ referee_data.referee_role_or_position }}</td>
                        <td>{{ referee_data.direct_supervisor }}</td>
                        <td>{{ referee_data.email_address }}</td>
                        <td>{{ referee_data.country }}</td>
                        <td>{{ referee_data.city }}</td>
                        <td>{{ referee_data.phone_number }}</td>
                        <td>{{ referee_data.preferred_correspondence_language }}</td>

                        <td>

                            <a href="{% url 'applicantprofiles:referee-update'  referee_data.id %}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                </svg>
                            </a>
                            <a href="{% url 'applicantprofiles:referee-delete'  referee_data.id %}">

                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                </svg>
                            </a>

                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Supervisor</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country</th>
                        <th scope="col">City</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Language</th>
                        <th scope="col">Action</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer text-body-secondary">
                Add Professional Experience
            </div>
        </div>
    {% endif %}
{% endblock content %}
