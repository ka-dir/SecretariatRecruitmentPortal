{% extends 'main-layout.html' %}

{% block content %}
    <a href="{% url 'adverts:vacancies' %}"><span class="badge text-bg-info rounded-pill"> Go Back </a>
    <hr>
    <div class="p-4 p-md-5 mb-4 rounded text-bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-6 fst-italic">VACANCY : {{ vacancy_data.post_vacancy }}</h1>
            <p class="lead my-3">
                {% if vacancy_data.category_target_group == 0 %}
                    VACANCY : <span class="badge text-bg-info rounded-pill"> EXTERNAL</span>
                {% else %}
                    VACANCY :  <span class="badge text-bg-info rounded-pill">INTERNAL</span>
                {% endif %}

            </p>
            <p class="lead my-3">Advert No : <span
                    class="badge text-bg-warning rounded-pill">{{ vacancy_data.advert_no }}</span></p>
            <p class="lead my-3">No of Posts: : <span
                    class="badge text-bg-success">{{ vacancy_data.no_of_post }}</span></p>

        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">Requirement</strong>

                    <p class="card-text mb-auto">{{ vacancy_data.job_requirements }}</p>

                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success">Duties and Responsbilities</strong>

                    <p class="mb-auto">{{ vacancy_data.duties_responsibilities }}</p>

                </div>

            </div>
        </div>
    </div>
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Remuneration Package:</h4>
        </div>
        <div class="card-body">
            <h6 class="card-title pricing-card-title"> Basic Salary: {{ vacancy_data.currency }}<span>&#8594;</span>{{ vacancy_data.basic_salary }} <small
                    class="text-muted">/ mo</small></h6>
            <h6 class="card-title pricing-card-title"> House Allowance: {{ vacancy_data.currency }}<span>&#8594;</span> {{ vacancy_data.house_allowance }} <small
                    class="text-muted">/ mo</small></h6>
            <h6 class="card-title pricing-card-title"> Commuter Allowance: {{ vacancy_data.currency }}<span>&#8594;</span> {{ vacancy_data.commuter_allowance }} <small
                    class="text-muted">/ mo</small></h6>
            <h6 class="card-title pricing-card-title"> Leave Allowance: {{ vacancy_data.currency }}<span>&#8594;</span> {{ vacancy_data.leave_allowance }} </h6>
            <h6 class="card-title pricing-card-title"> Medical Cover: {{ vacancy_data.currency }}<span>&#8594;</span> {{ vacancy_data.medical_scheme }} </h6>

            <button type="button" class="btn btn-lg btn-block btn-primary">APPLY</button>
        </div>
    </div>

{% endblock content %}